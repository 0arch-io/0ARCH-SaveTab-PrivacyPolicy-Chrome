{
  "manifest_version": 3,
  "name": "SaveTab",
  "version": "2.0.0",
  "description": "Save and restore tab collections with one click",
  "icons": {
    "16": "icons/icon-16.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  "permissions": [
    "tabs",
    "storage",
    "alarms",
    "tabGroups",
    "sidePanel"
  ],
  "action": {
    "default_title": "Open SaveTab"
  },
  "side_panel": {
    "default_path": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+S"
      }
    }
  },
  "web_accessible_resources": [
    {
      "resources": ["suspended.html", "suspended.css"],
      "matches": ["<all_urls>"]
    }
  ]
}
